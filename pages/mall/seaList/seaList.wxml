<view class="goods-ser">
    <view url='../search/search'><input placeholder="请输入搜索关键词" bindinput='changeInput'  bindconfirm="searchBtn" value="{{value}}"/></view>
    <image class="home-ser"  src="/image/search.png"></image>
    <!-- <image class="home-ser home-ser1" style='left:79%'  src="/image/ser.png" bindtap='emptyVal'></image> -->
    <view class='goods-ser-right'style='top:42rpx' bindtap="searchBtn">搜索</view>
</view>
<view class="swiper-tab"> 
  <view class="swiper-tab-item {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">默认<view></view></view> 
  <view class="swiper-tab-item {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">销量<view></view></view> 
  <view class="swiper-tab-item {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">价格<image src="/image/sort.png" wx:if="{{currentTab!=2}}"></image><image src="/image/sort1.png" wx:if="{{currentTab==2}}"></image><view></view></view> 
</view> 
