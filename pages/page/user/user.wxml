      <view class='weui-img'>
        <image src="/image/icl.png"></image>
      </view>
    </navigator>
  </view>
  <view class='weui-back'>
    <navigator class='weui-cell weui-cell_access' url='../../work/shopList/shopList'>
      <image src='/image/u5.png' class='user-img'></image>
      <view class='weui-cell__bd'>
        小云店工作台
      </view>
      <view class='weui-img'>
        <image src="/image/icl.png"></image>
      </view>
    </navigator>
  </view>
  <view class='weui-back'>
    <navigator class='weui-cell weui-cell_access' url='../manageM/manageM'>
      <image src='/image/u6.png' class='user-img'></image>
      <view class='weui-cell__bd'>
        商贸云工作台
      </view>
