<!-- 冻结店铺 -->
<mes show="{{freezeModal}}">
  <view>
    <text>确认冻结店铺？</text>
    <button bindtap='freeze'>确定</button>
  </view>
</mes>
<mes show="{{openModal}}">
  <view>
    <text>确认解冻店铺？</text>
    <button bindtap='unfreeze'>确定</button>
  </view>
</mes>

<view class='mes-cont'>
  <view class="ym_jpstorename">
    <view class="ym_jpstorelogo">
      <navigator url=''>
        <image class="store-logo" src="{{baseUrl}}{{store.logo}}?x-oss-process=style/logo"></image>
      </navigator>
    </view>
    {{store.name}}
    <view>
      <text class='shopStatus'>运营中</text>
    </view>
  </view>
  <view class="ym_jpstoredesc">
    <text class="leftyh">“</text>{{store.description}}
    <text class="rightyh">”</text>
  </view>
</view>
<view class="weui_cells new-weui">
  <view>
    <text class='store-address'>运营数据</text>
  </view>
  <view class='new-view'>
    <view>{{count.goodsNum}}</view>商品总量</view>
  <view class='new-view'>
    <view>{{count.followNum}}</view>关注人数</view>
  <view class='new-view'>
    <view>{{count.purchaserNum}}</view>进货商</view>
</view>
<view class="weui_cells">
  <view>
    <image src="/image/positionico.png"></image>
    <text>{{store.address}}</text>
  </view>
  <view class='flex-box'>
    <view class='area-box'>
      <image src="/image/positionico.png"></image>
      <text class="store-address">所属商场</text>
    </view>
    <view>{{floor.floorInfo.mallName}}</view>
  </view>
  <view class='flex-box'>
    <view class='area-box'>
      <image src="/image/positionico.png"></image>
      <text class="store-address">楼层区域</text>
    </view>
    <view>{{floor.floorInfo.balcony}} {{floor.floorInfo.area}}</view>
  </view>
</view>
<!-- 小云店 -->
<navigator target="miniProgram" open-type="navigate" app-id="wx4f385374765e4cbb" path="pages/page/home/home?storeId={{store.id}}" extra-data="" version="trial">
  <view class="weui_cells weui_cells-new" style='margin-bottom:0;'>
    <image src="/image/mes12.png"></image>
    <text class="store-address">小云店 </text>
    <view class='weui-view'>
      <image class='img' src="/image/icl.png"></image>
    </view>
    <view class='weui-xian weui-xian1'></view>
  </view>
  <view class='show-img-box'>
    <block wx:key="{{index}}" wx:for="{{goodsList}}">
      <view wx:if="{{index<6}}" class='img-item'>
        <image mode='aspectFit' src="{{baseUrl}}{{item.mainImgUrl}}?x-oss-process=style/logo"></image>
      </view>
    </block>
  </view>
</navigator>


<!-- 小云店信息 -->
<navigator target="miniProgram" open-type="navigate" app-id="wx4f385374765e4cbb" path="pages/page/storeIcon/storeIcon?storeId={{store.id}}" extra-data="" version="trial">
<view class="weui_cells weui_cells-new" style="margin-bottom:0;">
  <image src="/image/mes12.png"></image>
  <text class="store-address">小云店信息 </text>
  <view class='weui-view'>
    <image class='m-img' src="/image/xcx.png"></image>
    <image class='img' src="/image/icl.png"></image>
  </view>
  <view class='weui-xian weui-xian1'></view>
</view>
</navigator>

<view class='weui-time weui-time-new' style="border-top:2rpx solid #F4F4F4;margin-top:0;">
  <view>营业时间
    <text wx:if="{{store.openingTime}}">{{store.openingTime}}</text>
    <text class='no-font' wx:else>暂无</text>
  </view>
  <view>客服电话
    <text wx:if="{{store.servicePhone}}">{{store.servicePhone}}</text>
    <text class='no-font' wx:else>暂无</text>
    <view class='mes-tel' style="border-bottom:0;">
      <image src="/image/tel1.png" bindtap='callMeMaybe'></image>
    </view>
  </view>
  <view>客服微信
    <text wx:if="{{store.wechatNumber}}">{{store.wechatNumber}}</text>
    <text class='no-font' wx:else>暂无</text>
  </view>
  <view>公众号
    <text wx:if="{{store.wechatPublicAccount}}">{{store.wechatPublicAccount}}</text>
    <text class='no-font' wx:else>暂无</text>
  </view>
</view>
<!-- 按钮 -->
<view wx:if="{{state=='1'}}" bindtap='authentication' class='bottom-button ac-btn'>商城认证</view>
<view wx:if="{{state=='2'}}" bindtap='showModal' data-type="freeze" class='bottom-button default-btn'>冻结店铺</view>
<view wx:if="{{state=='3'}}" bindtap='showModal' data-type="unfreeze" class='bottom-button default-btn'>解冻店铺</view>