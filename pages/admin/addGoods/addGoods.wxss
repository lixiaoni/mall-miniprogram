.uploadImg{
  height: 330rpx;font-size: 30rpx;
  text-align: center;color: #999;
}
.uploadImg image{
  height: 150rpx;width: 150rpx;margin-top: 40rpx;margin-bottom: 10rpx;
}
.page__category-content{
  margin:0 20rpx;background: #fff;color: #333;padding-bottom: 10rpx;margin-bottom: 30rpx;
  border-radius: 20rpx;font-size: 30rpx;padding-right:30rpx;overflow: hidden;
}
.weui-title{
  font-size: 34rpx;font-weight: bold;height: 100rpx;line-height: 100rpx;
  padding-left: 30rpx;border-bottom: 2rpx solid #E7E7E7;width: 101%;
  position: relative;
}
.weui-input{
  padding-left: 30rpx;color: #999999;font-size: 28rpx;margin-bottom: 10rpx;
}
.weui-cell__hd image,.weui-cell__ft1 image,.weui-title image,.weui-cell__ft image{
  width: 30rpx;height: 30rpx;vertical-align: middle;margin-top: -6rpx;margin-right: 15rpx;
}
.weui-cell:before{
  border-top: 2rpx solid #E7E7E7;
}
.weui-cell__ft{
  color: #333;
}
.weui-title view{
  position: absolute;right: 30rpx;top:0rpx;color: #999;font-size: 30rpx;
}
.weui-active{
  color: #C79359;font-weight: 600;
}
.weui-cell__bd,.weui-cell__ft text{
  font-weight: 600;
}
.weui-cell__ft text{
  margin-right: 30rpx;
}
.weui-cell1{
  padding:10px 15px;
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;padding-right: 0;
  position: relative;
}
.weui-cell{
  padding-right: 0;
}
.weui-cell__ft1{
  position: absolute;right: 0;top:58rpx;
}
.weui-input{
  position: relative;font-size: 30rpx;color: #333;
}
.weui-input text{
  position: absolute;right: 0rpx;top:3rpx;font-size: 28rpx;
}
.weui-input .pla-input{
  font-weight: normal;font-size: 28rpx;color: #999
}
.weui-input .weui-input{
  position: absolute;top:-4rpx;right: 60rpx;text-align: right;font-size: 36rpx;font-weight: 600;
}
.add-cont{
  margin-bottom: 160rpx;
}
.add-bottom{
   position: fixed;bottom: 0;z-index: 10;color: #CCAA77;
  font-size: 36rpx;background:#fff;width: 100%;height: 120rpx;
}
.add-bottom view{
  width: 49%;display: inline-block;text-align: center;position: relative;height: 50rpx;
  margin-top: 40rpx;
}
.add-bottom view:first-child{
  border-right: 2rpx solid #F4F4F4;
}
.add-bottom image{
  height: 40rpx;width: 40rpx;vertical-align: middle;margin-right: 10rpx;margin-top: -3rpx;
}
.weui-uploader__input-box{
  margin-bottom: 30rpx;border-radius: 6rpx;
}
.weui-uploader__img{
  border-radius: 6rpx;
}
.weui-upload{
  padding-top: 40rpx;
}
.weui-icon{
  font-size: 24rpx;color: #999;margin:10rpx 0;font-weight: normal
}
.weui-icon image{
  width: 30rpx;height: 30rpx;vertical-align: middle;margin-top: -4rpx;margin-right: 10rpx;
}
.add-size{
  padding:5rpx 30rpx;font-size: 28rpx;margin:10rpx 0 20rpx 0;
}
.add-size text{
  margin-right: 30rpx;
}
.weui-uploader__files{
  position: relative;
}
.mainmove{position: absolute; opacity: 0.7}
.maind{background: #fff; border:1px dashed #efefef;}
.mainend{position: static; opacity: 1;}
.weui-uploader__file {margin-right: 10rpx;}
.weui-uploader__img,.weui-uploader__input-box {width: 150rpx;height: 150rpx;margin-right: 18rpx;}
.page-weui{border-top:1rpx solid #EFEFEF;margin-left: 15px;}
.page-weui-active{border-top: 0;}
.page-weui .weui-cell {padding-left: 0;}
.page-weui .add-size {margin-left: 0;}

