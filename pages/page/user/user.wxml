      </view>
      <view class='weui-img'>
        <image src="/image/icl.png"></image>
      </view>
    </navigator>
  </view>
  <view class='weui-back' hidden='{{!isStoreOwner}}'>
    <navigator class='weui-cell weui-cell_access' target="miniProgram" open-type="navigate" app-id="wx4f385374765e4cbb" path="pages/page/workIndex/workIndex?storeId={{user.id}}" extra-data="" version="trial">
      <image src='/image/cloudIcon.png' class='user-img'></image>
      <view class='weui-cell__bd'>
        小云店工作台
      </view>
      <view class='weui-img'>
        <image src="/image/icl.png"></image>
      </view>
    </navigator>
  </view>
  <view class='weui-back'>
    <navigator class='weui-cell weui-cell_access' url='../manageM/manageM'>
      <image src='/image/mallCloudIcon.png' class='user-img'></image>
      <view class='weui-cell__bd'>
        商贸云工作台
      </view>
      <view class='weui-img'>
        <image src="/image/icl.png"></image>
      </view>
    </navigator>
  </view>
  <view class='weui-back'>
    <navigator class='weui-cell weui-cell_access' url='../../cloudOrder/orderList/orderList'>
      <image src='/image/cloudOrder.png' class='user-img'></image>
      <view class='weui-cell__bd'>
        云产品订单
      </view>
      <view class='weui-img'>
        <image src="/image/icl.png"></image>
      </view>
    </navigator>
  </view>
