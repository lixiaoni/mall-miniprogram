<view class='lw-pop' wx:for="{{mallChosenGoods}}" wx:key="{{index}}">
  <view class='common-flex-between'>{{item.name}}<text data-index='{{index}}' bindtap='moreList'>更多</text></view>
  <view>{{item.desc}}</view>
  <view class='fw-cont'>
       <view  wx:for="{{item.goodsList}}" wx:key="{{index}}"  wx:if="{{index<4}}">
       <navigator class='miniDetails' target="miniProgram" open-type="navigate" app-id="wx4f385374765e4cbb" path="pages/page/goodsDetails/goodsDetails?goodsId={{item.id}}&storeId={{item.storeId}}" extra-data="" version="trial"></navigator>
          <view  class='fw-c-img fw-c-img1'><image mode="widthFix" src='{{baseUrl}}{{item.mainImgUrl}}?x-oss-process=style/goods-small'></image></view>
          <view style='line-height:35rpx;margin-bottom:10rpx;'>{{item.name}}</view>
          <view>零售 <text>￥{{item.sellPrice}}</text></view>
          <view hidden='{{!item.isPurchaser}}' class='new_left'>批发 <text class='fw-you'>￥{{item.wholesalePrice}}</text></view>
          <view hidden='{{item.isPurchaser}}' class='new_left'>批发 <image  class='fw-c-you' src='/image/wh.png'></image></view>
        </view>
    </view>
</view>
