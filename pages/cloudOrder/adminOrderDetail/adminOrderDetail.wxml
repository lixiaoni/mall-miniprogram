<!-- 开通 -->
<mes show="{{openModal}}">
  <view class='modal-box'>
    <text>支付交易单号</text>
    <view>
      <input type='text' data-type='payCode' value="{{payCode}}" class='modal-input' placeholder='请输入支付交易单号' bindinput='watchInput'></input>
    </view>
    <button bindtap='sureOpen'>开通小云店</button>
  </view>
</mes>

<view class='order-box'>
  <view class='price-box'>
    <image class='logo' src='/image/youlife.png'></image>
    <view>
      <text class="com">新购-来自</text>
    </view>
    <view>
      <text class="price">￥{{msg.orderAmount}}</text>
    </view>
  </view>

  <view class='order-title'>
    <view>
      <text class='store-name'>小云店商城专业版</text>
      <text class='store-type'>新批零</text>
    </view>
    <text wx:if="{{msg.orderStatus=='paid'}}" class='youyou'>已付款</text>
    <text wx:if="{{msg.orderStatus=='unpaid'}}" class='youyou'>待付款</text>
  </view>

  <view class='msg-box'>
    <view class='msg-item'>
      <text class='msg-title'>服务时间</text>
      <text class="msg-content">{{msg.yunStoreGoodsOrderInfo.serviceTerm}}</text>
    </view>
    <view class='msg-item'>
      <text class='msg-title'>开始时间</text>
      <text class="msg-content">{{msg.yunStoreGoodsOrderInfo.serviceDateBegin}}</text>
    </view>
    <view class='msg-item'>
      <text class='msg-title'>结束时间</text>
      <text class="msg-content">{{msg.yunStoreGoodsOrderInfo.serviceDateEnd}}</text>
    </view>
    <view class='msg-item' bindtap='call' data-tel='{{msg.userInfoVO.mobile}}' style='justify-content: space-between;'>
      <view class='flex'>
        <text class='msg-title'>手机号码</text>
        <text class="msg-content">{{msg.userInfoVO.mobile}}</text>
      </view>
      <image class='tel-icon'  src='/image/tel1.png'></image>
    </view>
  </view>

</view>

<view class='order-box'>

  <view>
    <view class='msg-item'>
      <text class='msg-title'>订单号</text>
      <text class="msg-content">{{msg.orderNumber}}</text>
    </view>
    <view class='msg-item'>
      <text class='msg-title'>下单时间</text>
      <text class="msg-content">{{msg.createDate}}</text>
    </view>
  </view>

  <view class='border'></view>

  <view class="invoiceBox">
      <view class='msg-item'>
        <text class='msg-title'>发票信息</text>
        <text class="msg-content">{{msg.receiptInfo.invoiceCategory}}</text>
      </view>
      <view class='msg-item'>
        <text class='msg-title'>公司名称</text>
        <text class="msg-content">{{msg.receiptInfo.invoiceTitle}}</text>
      </view>
      <view class='msg-item'>
        <text class='msg-title'>纳税人识别号</text>
        <text class="msg-content">{{msg.receiptInfo.identificationNumber}}</text>
      </view>
  </view>

</view>

<view class='order-box'>
  <view class='pay-item'>
    <text class='msg-title'>支付方式</text>
    <text class="msg-content">其他支付方式</text>
  </view>
  <view class='pay-item'>
    <text class='msg-title'>优惠码支付</text>
    <text class="msg-content">￥{{msg.yunStoreGoodsOrderInfo.preferentialPrice}}</text>
  </view>
  <view class='pay-item' style='padding:0;'>
    <text class='msg-title'>实付金额</text>
    <text class="msg-content gold">￥{{msg.orderAmount}}</text>
  </view>
</view>
<view class='company'>优生活技术支持</view>
<button bindtap='openStore' class='open-btn'>开通小云店</button>