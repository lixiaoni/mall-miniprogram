<login id="login"></login>
<view class="goods-ser">
    <navigator url='../search/search'><input placeholder="找商品、找小云店" disabled='disabled' value="{{value}}"/><view class='goods-ser-right'>搜索</view></navigator>
    <image class="home-ser"  src="/image/search1.png"></image>
</view>
<swiper class="swiper" indicator-dots="true" autoplay="true" interval="2000" duration="500">  
  <block wx:for="{{movies}}" wx:key="{{index}}">  
    <swiper-item>  
      <image src="{{baseUrl}}{{item.imageUrl}}?x-oss-process=style/store-cover" class="slide-image" mode="aspectFill"/>  
    </swiper-item>  
  </block>  
</swiper>
<view class='nt-title'>
    <view>
      <navigator url='../class/class'>
        <view>商品分类</view><text>Class</text>
      </navigator>
    </view>
  <view>
    <navigator url='../store/store'>
      <view>逛小云店</view><text>Cloud Store</text>
    </navigator>
  </view>
  <view>
    <navigator url='../mallMes/mallMes'>
     <view>商城信息</view><text>Mall Infor</text>
    </navigator>
  </view>
</view>
