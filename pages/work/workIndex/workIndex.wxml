    <navigator url='../../floor/floorList/floorList'><view><image mode='widthFix' src='/image/admim1.png'></image></view><view>楼层管理</view></navigator>
    <navigator url='../../floor/adminList/adminList'><view><image mode='widthFix' src='/image/admin2.png'></image></view><view>楼层管理员</view></navigator>
    <navigator url="../../work/adminShopList/adminShopList"><view><image mode='widthFix' src='/image/13.png'></image></view><view>小云店</view></navigator>
  </view>
</view>
