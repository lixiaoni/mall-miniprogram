<view class="goods-ser">
  <view url='../search/search'>
    <input placeholder="请输入搜索关键词" bindinput='changeInput' bindconfirm="searchBtn" value="{{value}}" />
  </view>
  <image class="home-ser" src="/image/search.png"></image>
  <image class="home-ser home-ser1" style='left:79%' wx:if='{{emptyVal}}'  src="/image/ser.png" bindtap='emptyVal'></image>
  <view class='goods-ser-right' style='top:36rpx' bindtap="searchBtn">搜索</view>
</view>
<scroll-view scroll-y="true" style="height:100%;" bindscrolltolower="bindDownLoad">
  <view class="st-cont" wx:for="{{goodsList}}" wx:key="index">
    <view class='miniDetails' data-store-nature='{{item.storeNature}}' data-store-id='{{item.storeId}}' data-goods-id='{{item.id}}' bindtap='toMiniProgram'></view>
    <image class="cart-thumb" src="{{baseUrl}}{{item.mainImgUrl}}?x-oss-process=style/goods-small"></image>
    <view class='st-d-t'>{{item.name}}</view>
    <view class='st-details'>
      <view class='st-d-status'>
        <view>
          <text>零售 </text>
          <text class='st-mom1'>￥{{item.sellPrice}}</text>
        </view>
        <view wx:if='{{item.storeNature==1}}'>
          <view hidden='{{!item.isPurchaser}}'>
            <text>批发 </text>
            <text class='st-mom'>￥{{item.wholesalePrice}}</text>
          </view>
          <view hidden='{{item.isPurchaser}}'>
            <text>批发 </text>
            <image src='/image/wh.png'></image>
          </view>
        </view>
        <view>{{item.storeName}}
          <image src='/image/mallr.png'></image>
        </view>
      </view>
    </view>
  </view>
  <!-- <view class='sl-font'>没有更多了</view> -->
</scroll-view>