.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modal-dialog{
  width: 600rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;min-height: 275rpx;
  left: 50%;color: #000;font-size: 40rpx;
  z-index: 9999;text-align: center;
  background: #f9f9f9;font-weight: bold;
  margin: -180rpx -300rpx;
  border-radius: 10rpx;
}
button{
  width: 240rpx;height: 70rpx;color: #CCAA77;line-height: 68rpx;
  border: 2rpx solid #CCAA77;font-size: 30rpx;margin-top:25rpx;background:none;
}
.mes-tel{
  color: #CCAA77;
  border-bottom: 2rpx solid #CCAA77;
  width:265rpx;margin:0 auto;padding-top: 10rpx;
}
.mes-m{
  margin-top:60rpx;
}
.modal-title {
 position: absolute;right:20rpx;top:20rpx;
}
.modal-title image{
 width: 40rpx;height: 40rpx;
}

.modal-content {
  padding: 5rpx 0 0 0;
  position: relative;
}
.hide{
  display: none;
}

.show{
  display: block;
}

