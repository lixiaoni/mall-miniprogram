@import '../../page/mesEdit/mesEdit';
@import '../floor/spec';
.floor-box{
   padding: 20rpx 20rpx 160rpx; 
}
.company-logo{
  width: 33rpx;
  height: 33rpx;
  padding-top: 2rpx;
}
.company-name{
  font-size: 34rpx;
  font-weight: 600;
  padding-left: 20rpx;
}
.more{
  float: right;
  width: 50rpx;
}

.add{
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}
.more image{
  width: 43rpx;
  height: 43rpx;
  float: right;
}
/* 楼层块 */
.floor-part-box{
  margin-top: 20rpx;
  border-radius:5px;
}
.floor-title{
  font-size:36rpx;
  font-weight: 600;
}
.floor-admin{
  width:56rpx;
  height:56rpx;
  border: 2rpx solid #fff;
}
/* 区 */
.floor-part-box .area-box{
  border-top: 2rpx solid #eee;
  font-size:26rpx;
  height:120rpx;
  padding-top:0;
  padding-bottom:0;

}
.area-title{
  font-weight: 600;
}
.area-type{
  margin-right: 19rpx;
}
.title-box{
  width: 110rpx;
  padding-right:5rpx; 
}
.area-img-list{
  position: relative;
  width: 150rpx;
  height: 60rpx;
  overflow: hidden;
}
.area-admin{
  position: absolute;
}
.tri{
  width: 32rpx;
  height: 32rpx;
}
/* 新建 */
.new-floor{
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  font-size: 34rpx;
  text-align: center;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  z-index:11;
}  
/* 公用样式 */
.floor-part{
  /* border-radius: 5px; */
  background: white;    
  padding: 40rpx 30rpx; 
}
.flex-box{
  display: flex;
  justify-content: space-between;
  align-items:center;
}
.column-box{
  display: flex;
}

.center-box{
  display: flex;
  align-items: center;
}