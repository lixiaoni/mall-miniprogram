.sendmessage {  
  background-color: white;  
  width: 100%;  
  position: fixed;  
  bottom: 0rpx;  
  display: flex;  
  flex-direction: row;  
}  
.sendmessage input {  
  width: 100%;  
  height: 80rpx;  
  background-color: white;  
  line-height: 80rpx;  
  font-size: 28rpx;  
  border: 2rpx solid #d0d0d0;  
  padding-left: 20rpx;  
}  
.sendmessage button {  
  border: 2rpx solid white;  
  width: 18%;  
  height: 80rpx;  
  background: #fff;  
  color: #000;  
  line-height: 80rpx;  
  font-size: 28rpx;  
}  
