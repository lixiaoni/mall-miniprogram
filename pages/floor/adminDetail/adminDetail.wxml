<login id="login"></login>
<view class='floor-box adminD-box'>
  <view class='floor-part detail-box'>
    <view class='admin-icon'>
      <image src='{{src}}' style='width:150rpx;height:150rpx;'></image>    
    </view>
    <view class='admin-name'>{{name}}</view>

    <!-- 按钮 -->
    <view class='btn-list'>
      <view class='fun-btn'>
        <image src='/image/msg.png' class='btn-icon'></image>
        <text class='btn-name'>信息</text>
      </view>

      <view class='fun-btn' bindtap='call'>
        <image src='/image/tel2.png' class='btn-icon'></image>
        <text class='btn-name'>呼叫</text>
      </view>

      <view class='fun-btn' bindtap='setting'>
        <image src='/image/set.png' class='btn-icon'></image>
        <text class='btn-name'>设置</text>
      </view>
    </view>

    <!-- 信息 -->
    <view class='msg-box'>
      <view class='msg-part'>
        <view class='msg-title'>手机号码</view>
        <view class='gold-font'>{{phoneNum}}</view>
      </view>
      <view class='msg-part'>
        <view class='msg-title'>微信号</view>
        <view wx:if="{{wx}}">{{wx}}</view>
        <view class='msg-content' wx:else>暂无</view>
      </view>
      <view class='msg-part'>
        <view class='msg-title'>部门</view>
        <view wx:if="{{part}}">{{part}}</view>
        <view class='msg-content' wx:else>暂无</view>
      </view>
      <view class='msg-part'>
        <view class='msg-title'>优惠码</view>
        <view  wx:if="{{code}}">{{code}}</view>
        <view class='msg-content' wx:else>暂无</view>
      </view>
    </view>

  </view>
  
    <!-- 管理层 -->
  <navigator url="{{manage?'/pages/work/floorList/floorList?user='+userId:''}}">
    
    <view class='list-show floor-part'>
      <view class='list-title'>我的管理楼层 
      <view wx:if="{{manage}}" style='display:flex;align-items:center;'>
        <text style='margin-right:13rpx;'>共 <text style='color:#ccaa77;'>{{allFloorNum}}</text> 家</text>
       <image class='tri-icon' src='/image/icl.png'></image>
      </view>

      </view>
      <view wx:if="{{manage}}">
      <block wx:for="{{manage}}" wx:key="{{index}}">
        <view class='border-box list-part'>
          <view class='column-center'>
            <image src='/image/dp.png' class='com-icon'></image>
            <text class='com-title'>{{item.name}}</text>
          </view>

          <block wx:for="{{item.childList}}" wx:for-item="floor" wx:key="{{index}}">
            <view class='floor-box'>        
              <view class='column-center'>
                <image src='/image/floor.png' class='com-icon'></image>
                <text>{{floor.floorNum}}</text>
                <text style='margin-left:20rpx;'>{{floor.name}}</text>
                <text wx:if='{{floor.childList.length==0||!floor.childList}}'><text  class='count-font'>{{floor.storeCount}}</text> 家</text>
              </view>
              <block wx:for="{{floor.childList}}" wx:for-item="area" wx:key="{{index}}">
                <view class='column-center area-box'>
                  <text class='area-font'>{{area.name}}</text>
                  <text><text class='count-font'>{{area.storeCount}} </text>家</text>
                </view>
               </block>
            </view>
          </block>

        </view>
      </block>
      </view>
      <view class='no-font' wx:else>暂无分配楼层</view>
    </view>
  </navigator>  

</view>