/* pages/work/shopList/shopList.wxss */
.flex{
  display: flex;
  align-items: center;
}
.flex-box{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.theme-color{
  color: #ccaa77;
}
/* 搜索 */
.search-img{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.search-btn{
  height: 80rpx;
  line-height: 80rpx;
  width: 100rpx;
  text-align: center;
  color: #ccaa77;
}

/* 切换 */
.tab-box{
  height: 100rpx;
  width: auto;
  margin: 20rpx 0;
  padding: 0 50rpx;
  background: #fff;
}
.search-item{
  height: 100rpx;
  line-height: 100rpx;
  margin-right: 60rpx;
  white-space: nowrap;
  font-size:30rpx;
}
.ac-item{
  border-bottom: 2rpx solid #ccaa77;
  color: #ccaa77;
}

/* 商品 */
.more{
  flex: 0 0 24rpx;
  width: 24rpx;
  height: 24rpx;
}
.goods-item{
  padding: 50rpx 50rpx;
  border-radius: 4px;
  margin: 20rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.icon-box{
  height: 100rpx;
  width: 100rpx;
  margin-right: 20rpx;
  
}
.good-icon{
  max-width: 100rpx;
  max-height: 100rpx;
  border-radius: 5px;
}
.store-name{
  max-width:300rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;  
  font-weight: 600;
  display: inline-block;
  font-size: 32rpx;
}
.name-box{
  display: flex;
  align-items: center;
}
.tip{
  padding:0 13rpx ;
  display: inline-block;  
  background: #ccaa77;
  color: #fff;
  border-radius: 4px;
  font-size: 24rpx;
  height: 30rpx;
  line-height: 30rpx;
  margin-left: 18rpx;
}
.goods-type{
  font-size: 24rpx;
}
.area-font{
  color: #a5a5a5;
  margin-left: 15rpx;
}
/* 标签 */
.tips-box{
  margin-top: 15rpx;
}
.label-item{
  padding: 4rpx 24rpx;
  background: #f6f6f6;
  font-size: 24rpx;
  display: inline-block;
  border-radius: 4px;
  margin-right: 15rpx;
  color: #858384;
}
/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}