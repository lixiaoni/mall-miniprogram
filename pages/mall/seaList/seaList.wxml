<view class="goods-ser">
    <view url='../search/search'><input placeholder="请输入搜索关键词" bindinput='changeInput'  bindconfirm="searchBtn" value="{{value}}"/></view>
    <image class="home-ser"  src="/image/search.png"></image>
    <!-- <image class="home-ser home-ser1" style='left:79%'  src="/image/ser.png" bindtap='emptyVal'></image> -->
    <view class='goods-ser-right'style='top:36rpx' bindtap="searchBtn">搜索</view>
</view>
<view class="swiper-tab"> 
  <view class="swiper-tab-item {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">默认<view></view></view> 
  <view class="swiper-tab-item {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">销量<view></view></view> 
  <view class="swiper-tab-item {{currentTab==2 ? 'on' : ''}}"  data-current="2" bindtap="swichNav">价格
    <!-- <view class='sort-c'></view> -->
    <view class='top-p' wx:if='{{descShow}}'></view>
    <view class='top-p' wx:if='{{!descShow && currentTab!=2}}'></view>
    <view class='top-p top-p1' wx:if='{{!descShow && currentTab==2}}'></view>
    <view class='up-p' wx:if='{{!descShow}}'></view>
    <view class='up-p up-p1' wx:if='{{descShow}}'></view>
    <!-- <image src="/image/sort.png" wx:if="{{currentTab!=2}}"></image><image src="/image/sort1.png" wx:if="{{currentTab==2}}"></image> -->
    <view></view> 
  </view>
</view> 
<scroll-view scroll-y="true" style="height:100%;" bindscrolltolower="bindDownLoad">
<view class="st-cont"  wx:for="{{goodsList}}" wx:key="index">
 <navigator wx:if='{{item.storeNature==1}}'  class='miniDetails' target="miniProgram" open-type="navigate" app-id="wx4f385374765e4cbb" path="pages/page/goodsDetails/goodsDetails?goodsId={{item.id}}" extra-data="" version="trial"></navigator>
 <navigator wx:if='{{item.storeNature==2}}'  class='miniDetails' target="miniProgram" open-type="navigate" app-id="wx1a7532a2abdd1698" path="pages/page/goodsDetails/goodsDetails?goodsId={{item.id}}" extra-data="" version="trial"></navigator>
  <image class="cart-thumb" src="{{baseUrl}}{{item.mainImgUrl}}?x-oss-process=style/goods-small"></image>
  <view  class='st-d-t'>{{item.name}}</view> 
  <view class='st-details'>
    <view class='st-d-status'>
      <view><text>零售 </text><text class='st-mom'>￥{{item.sellPrice}}</text></view>
      <view hidden='{{!item.isPurchaser}}'><text>批发 </text><text class='st-mom1'>￥{{item.wholesalePrice}}</text></view>
      <view hidden='{{item.isPurchaser}}'><text>批发 </text><image src='/image/wh.png'></image></view>
      <view>{{item.storeName}}<image src='/image/mallr.png'></image></view>
      </view>
    </view>
</view>
<!-- <view class='sl-font'>没有更多了</view> -->
</scroll-view>